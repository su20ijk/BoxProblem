@model BoxProblem.Data.BoxInventory
@{
    ViewData["Title"] = "Delete";
}

<br />
<br />
<div class="bkg">
    <div class="row">
        <div class="col-12 headerbkg">
            Delete Confirmation
        </div>
    </div>
    <br />
    <br />

    <div class="row">
        <div class="offset-2">
            <label class="label">Weight: </label> @Model.Weight
        </div>
    </div>
    <div class="container topspace3">
    </div>
    <div class="row">
        <div class="offset-2">
            <label class="label">Volume: </label> @Model.Volume
        </div>
    </div>
    <div class="container topspace3">
    </div>
    <div class="row">
        <div class="offset-2">
            <label class="label">Able to Hold Liquid: </label> @Model.CanHoldLiquid
        </div>
    </div>
    <div class="container topspace3">
    </div>
    <div class="row">
        <div class="offset-2">
            <label class="label">Cost: </label> @Model.Cost
        </div>
    </div>
    <div class="container topspace3">
    </div>
    <div class="row">
        <div class="offset-2">
            <label class="label">Amount in Inventory: </label> @Model.InventoryCount
        </div>
    </div>
    <div class="container topspace3">
    </div>
    <div class="row" align="center">
        <label class="label">ARE YOU SURE YOU WANT TO DELETE?</label>
        <div class="container topspace3">
        </div>      
        <div class="row" align="center">
            <div class="offset-6">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <input class="buttonB" type="submit" value="Delete" />
                }
                <a class="buttonB" href="@Url.Action("Index","BoxInventories")">Cancel</a>
            </div>
        </div>
    </div>
</div>

