@using BoxProblem.Data;
@model BoxInventory
@{
    ViewData["Title"] = "Details";
}
<div class="row">
    <div class="col-12 header">
        Details
    </div>
</div>
<div class="row">
    <div class="offset-2">
        <p>Weight: @Model.Weight</p>
    </div>
</div>
<div class="row">
    <div class="offset-2">
        <p>Volume: @Model.Volume</p>
    </div>
</div>
<div class="row">
    <div class="offset-2 body">
        <p>Liquid(Yes or No): @Model.CanHoldLiquid</p>
    </div>
</div>
<div class="row">
    <div class="offset-2">
        <p>Cost: @Model.Cost</p>
    </div>
</div>
<div class="row">
    <div class="offset-2">
        <p>Amount in Inventory: @Model.InventoryCount</p>
    </div>
</div>
<div class="row">
    <div class="offset-6">
        <button class="buttonB">@Html.ActionLink("Edit", "Edit", new { id = @Model.Id })</button>
        <button class="buttonB">@Html.ActionLink("Cancel", "Index")</button>
    </div>
</div>