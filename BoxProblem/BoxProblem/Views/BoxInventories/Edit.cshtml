@model BoxProblem.Data.BoxInventory
@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<div class="row">
    <div class="offset-2">
        <label>Weight: </label><input placeholder="@Html.DisplayFor(model => model.Weight)"/>
    </div>
</div>
<div class="row">
    <div class="offset-2">
        <label>Volume: </label><input placeholder="@Html.DisplayFor(model => model.Volume)"/>
    </div>
</div>
<div class="row">
    <div class="offset-2">
        <label>Liquid(Yes or No): </label><input placeholder="@Html.DisplayFor(model => model.CanHoldLiquid)" />
    </div>
</div>
<div class="row">
    <div class="offset-2">
        <label>Cost: </label><input placeholder="@Html.DisplayFor(model => model.Cost)"/>
    </div>
</div>
<div class="row">
    <div class="offset-2">
        <label>Amount in Inventory: </label><input placeholder="@Html.DisplayFor(model => model.InventoryCount)"/>
    </div>
</div>
<div class="row">
    <div class="offset-6">
        <input type="button" name="Save">
        <input type="button" name="Back">
    </div>
</div>