@using BoxProblem.Data;
@model BoxInventory
@{
    ViewData["Title"] = "Edit";
}
<div class="container topspace">
</div>
<form action="Edit" method="post" class="bkg">
    <div class="row">
        <div class="col-12 headerbkg">
            Edit
        </div>
    </div>
    <div class="container topspace3">
    </div>
    <input name="IdTP" value="@Model.Id" hidden="hidden" />
    <div class="row">
        <div class="offset-2">
            <label class="label">Weight: </label><input class="input" name="Weight" type="number" value=@Model.Weight min="1" required />
        </div>
    </div>
    <div class="row">
        <div class="offset-2">
            <label class="label">Volume: </label><input class="input" name="Volume" type="number" value=@Model.Volume min="1" required />
        </div>
    </div>
    <div class="row">
        <div class="offset-2">
            <label class="label">Ability to hold liquid: </label><input class="input" name="CanHoldLiquid" type="checkbox" value="true" checked=@Model.CanHoldLiquid />
        </div>
    </div>
    <div class="row">
        <div class="offset-2">
            <label class="label">Cost: </label><input class="input" name="Cost" type="number" step="any" value="@Model.Cost" min="0" required />
        </div>
    </div>
    <div class="row">
        <div class="offset-2">
            <label class="label">Amount in Inventory: </label><input class="input" name="InventoryCount" min="0" type="number" required value="@Model.InventoryCount" />
        </div>
    </div>
    <div class="row">
        <div class="offset-2">
            <label class="label">Creation Date: </label>@Model.CreatedAt
        </div>
    </div>
    <div class="container topspace3">
    </div>
    <div class="row">
        <div class="offset-6">
            <input class="buttonB" type="submit" name="submit">
            <a class="buttonB" href="@Url.Action("Details","BoxInventories", new { id = @Model.Id })">Cancel</a>
        </div>
    </div>
</form>