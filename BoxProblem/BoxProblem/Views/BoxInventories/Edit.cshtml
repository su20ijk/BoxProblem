@using BoxProblem.Data;
@model BoxInventory
@{
    ViewData["Title"] = "Edit";
}
<div class="row">
    <div class="col-12 header">
        Edit
    </div>
</div>
<form action="Edit" method="post">
    <input name="IdTP" value="@Model.Id" hidden="hidden" />
    <div class="row">
        <div class="offset-2">
            <label>Weight: </label><input name="Weight" type="number" value=@Model.Weight min="1" required/>
        </div>
    </div>
    <div class="row">
        <div class="offset-2">
            <label>Volume: </label><input name="Volume" type="number" value=@Model.Volume min="1" required/>
        </div>
    </div>
    <div class="row">
        <div class="offset-2">
            <label>Ability to hold liquid: </label><input name="CanHoldLiquid" type="checkbox" value="true" checked=@Model.CanHoldLiquid />
        </div>
    </div>
    <div class="row">
        <div class="offset-2">
            <label>Cost: </label><input name="Cost" type="number" step="any" value="@Model.Cost" min="0" required/>
        </div>
    </div>
    <div class="row">
        <div class="offset-2">
            <label>Amount in Inventory: </label><input name="InventoryCount" min="0" type="number" required value="@Model.InventoryCount" />
        </div>
    </div>
    <div class="row">
        <div class="offset-2">
            <p>Creation Date: @Model.CreatedAt</p>
        </div>
    </div>
    <div class="row">
        <div class="offset-6">
            <input type="submit" name="submit">
        </div>
    </div>
</form>
@Html.ActionLink("Back", "Details", new { id = @Model.Id })